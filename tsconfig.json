{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  }
}
